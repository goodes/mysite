<html>
    <head>
        <title>Hangman</title>
    </head>
    <body>
        <!-- <div><h1>Guess the word</h1></div> -->
        <div>
          {% with messages = get_flashed_messages() %}
                {% if messages %}
                  {% for message in messages %}
                    <font color="red">{{ message }}</font>
                  {% endfor %}
                {% endif %}
              {% endwith %}
        </div>
        <div>
          <table>
            <tr>
            <td>
              <img src="/static/img{{session.errors}}.png"><br>
              <font size=16>{% for letter in session.guessed%}<strong>{{letter}}</strong> {%endfor%}</font>
            </td>
            <td width=20> </td>
            <td>
              <table>
                <tr>
                {% for letter in session.letters %}
                <td width=50><a href="/choose/{{letter}}"><font size=16>{{ letter.upper() }}</font></a></td>
                {% if loop.index is divisibleby 4 %}</tr><tr>{% endif %}
                {% endfor %}
                </tr>
              </table>
          </td>
          </tr>
          </table></div>
